import cv2
import numpy as np
import matplotlib.pyplot as plt


def load_img():
    img = cv2.imread('../DATA/bricks.jpg').astype(np.float32) / 255
    img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    return img


# load_img()


def display_img(img):
    fig  = plt.figure(figsize=(12,10))
    ax = fig.add_subplot(111)
    ax.imshow(img)


i = load_img()
display_img(i)


gamma = 2


result = np.power(i,gamma)
display_img(result)


